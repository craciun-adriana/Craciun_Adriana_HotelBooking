@model IEnumerable<Craciun_Adriana_HotelReservation.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="get" asp-action="Index" class="row g-3 mb-3">
    <div class="col-md-2">
        <label class="form-label">Preț minim</label> 
        <input type="number" step="0.01" name="minPrice" value="@(ViewBag.CurrentMinPrice ?? "")" class="form-control" />
    </div>
    <div class="col-md-2">
        <label class="form-label">Preț maxim</label> 
        <input type="number" step="0.01" name="maxPrice" value="@(ViewBag.CurrentMaxPrice ?? "")" class="form-control" /> 
    </div>
    <div class="col-md-2 align-self-end"> 
        <button type="submit" class="btn btn-primary">Filtrează</button> 
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasePricePerNight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasePricePerNight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
